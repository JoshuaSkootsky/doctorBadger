{
  "root": true,
  "extends": ["fullstack", "prettier", "prettier/react"],
  "rules": {
    "prettier/prettier": [
      // customizing prettier rules (unfortunately not many of them are customizable)
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all"
      }
    ],
    "eqeqeq": ["error", "always"] // adding some custom ESLint rules
  }
}
